{
  "name": "gbraver-burst-core",
  "version": "1.7.0-beta",
  "description": "braver burst core",
  "engines": {
    "node": "^16.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaidouji85/gbraver-burst-core"
  },
  "main": "lib/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm-run-all clean type-check lint lint:test type-check:test test transpile copy-type-definition",
    "transpile": "cross-env BABEL_ENV=production babel src/ -d lib/",
    "type-check": "flow check src",
    "type-check:test": "flow check test",
    "copy-type-definition": "flow-copy-source src lib",
    "clean": "rimraf lib",
    "clean:coverage": "rimraf .nyc_output coverage",
    "test": "ava -T 600000",
    "lint": "eslint src",
    "lint:test": "eslint test",
    "coverage": "nyc ava",
    "coverage:html": "nyc --reporter=lcov --reporter=text-summary ava"
  },
  "files": [
    "lib/"
  ],
  "author": "y.takeuchi",
  "license": "ISC",
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-flow-strip-types": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-flow": "^7.14.5",
    "@babel/register": "^7.14.5",
    "ava": "^3.15.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-plugin-flowtype": "^5.8.0",
    "flow-bin": "^0.155.0",
    "flow-copy-source": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "ramda": "^0.27.1"
  },
  "ava": {
    "babel": {
      "compileEnhancements": false
    },
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  }
}
